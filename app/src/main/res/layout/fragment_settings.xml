<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kris.fragmentexperiments.SettingsFragment"
    android:background="@color/main_background">

    <Button
        android:text="15%"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:id="@+id/button_15"
        android:textSize="26sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/main_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="processTip"/>

    <Button
        android:text="25%"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:id="@+id/button_25"
        android:textSize="26sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/main_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="processTip"/>

    <Button
        android:text="20%"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:id="@+id/button_20"
        android:textSize="26sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/main_background"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="processTip"/>

    <EditText
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/billAmount"
        android:textAlignment="center"
        android:textSize="40sp"
        android:hint="Bill Amount"
        android:layout_height="100dp"
        android:layout_width="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp" />

    <TextView
        android:layout_height="wrap_content"
        android:text="@string/settings_fragment_title"
        android:typeface="monospace"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_above="@+id/button_15"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp" />

</RelativeLayout>
